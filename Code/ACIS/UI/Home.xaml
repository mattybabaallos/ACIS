<UserControl x:Class="UI.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="20"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="tab 1">
                <Label Content="one" />
            </TabItem>
            <TabItem Header="tab 2" >
            <Label Content="two" />
            </TabItem>
            <TabItem Header="tab 3" >
                <Label Content="three" />
            </TabItem>
        </TabControl>
        <DockPanel Grid.Row="1">
            <Label Content="{Binding Path=SelectedPort}"></Label>
            <!--<ComboBox x:Name="GradeListDropdown"
                          ItemsSource="{Binding Ports}"
                          SelectedValue ="{Binding SelectedPort}"
                          ToolTip="Serial port list"
                          Margin="20,0,0,0" Width="180" HorizontalAlignment="Left" 
                          />-->
        </DockPanel>
    </Grid>
</UserControl>
